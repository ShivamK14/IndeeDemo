pipeline{
  agent any

  stages{
    
    stage("test"){
      steps{
        sh "pytest -s -v ./tests/test_jenkins.py"
      }
      post{
        failure{
          echo "test failed stopping build"
          error "test Failure"
        }
      }
    }
    stage("build"){
      when {
        expression{
        currenBuild.result ==null || currentBuild.result=="success"
      }}
      steps{
        echo "we are building here"
      }
    }
  }


  post{
    success{
      echo "pipeline passed"

    }
    failure{
      echo "pipeline failed"
    }
  }
}